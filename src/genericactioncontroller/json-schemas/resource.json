
{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
      "spec": {
        "required": [
          "app",
          "newObject"
        ],
        "type": "object",
        "description": "ResourceSpec has app Name, newObject and existingResource object(if newObject is false)",
        "properties": {
          "app" : {
              "type": "string",
              "maxLength": 128,
              "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
          },
          "newObject": {
            "type": "string",
              "maxLength": 128,
              "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
          },
          "resourceGVK" :{
            "required": [
              "apiVersion",
              "kind",
              "name"
            ],
            "type": "object",
            "description": "resourcegvk is required only when newObject is false. It contains apiVersion, Kind and Name",
            "properties": {
              "apiVersion": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_./]*)?[A-Za-z0-9]$"
              },
              "kind": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
              },
              "name": {
                "type": "string",
                "maxLength": 128,
                "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
              }
            }
          }
        }
      },
      "metadata": {
        "required": ["name"],
        "properties": {
          "userData2": {
            "description": "User relevant data for the resource",
            "type": "string",
            "example": "Some more data",
            "maxLength": 512
          },
          "userData1": {
            "description": "User relevant data for the resource",
            "type": "string",
            "example": "Some data",
            "maxLength": 512
          },
          "name": {
            "description": "Name of the resource",
            "type": "string",
            "example": "ResName",
            "maxLength": 128,
            "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
          },
          "description": {
            "description": "Description for the resource",
            "type": "string",
            "example": "Resource description",
            "maxLength": 1024
          }
        }
      }
    }
  }
