{ 
  "schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "spec": {
      "required": [
        "app",
        "appLabel",
        "serviceName",
        "port",
        "protocol"
      ],
      "type": "object",
      "description": "Traffic inbound server Intent",
      "properties": {
        "app": {
          "description": "Application Name",
          "type": "string",
          "example": "smartapp",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "appLabel": {
          "description": "Application Label",
          "type": "string",
          "example": "app=smartapp",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.=]*)?[A-Za-z0-9]$"
        },
        "serviceName": {
          "description": "Servicename Name",
          "type": "string",
          "example": "httpbin",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "externalName": {
          "description": "External Name",
          "type": "string",
          "example": "httpbin.k8s.com",
          "maxLength": 128
        },
        "port": {
          "description": "Port number",
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "example": 8080
        },
        "protocol": {
          "description": "Protocol Name",
          "type": "string",
          "example": "TCP",
          "maxLength": 5,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "externalSupport": {
          "description": "External support",
          "type": "boolean",
          "example": false
        },
        "serviceMesh": {
          "description": "Service Mesh type",
          "type": "string",
          "example": "istio",
          "maxLength": 128
        },
        "management": {
          "type": "object",
          "required": ["sidecarProxy", "tlsType"],
          "properties": {
            "sidecarProxy": {
              "description": "Service Mesh sidecar proxy",
              "type": "string",
              "example": "yes",
              "maxLength": 4
            },
            "tlsType": {
              "description": "TLS type",
              "type": "string",
              "example": "MUTUAL",
              "maxLength": 8
            }
          }
        },
        "external": {
          "type": "object",
          "properties": {
            "serviceCertificate": {
              "description": "Service certificate",
              "type": "string",
              "example": "LS0tLS1CRUdJTi..",
              "maxLength": 8192
            },
            "servicePrivateKey": {
              "description": "Service key",
              "type": "string",
              "example": "LS0tLS1CRUd..",
              "maxLength": 8192
            },
            "caCertificate": {
              "description": "CA certificate",
              "type": "string",
              "example": "LS0tLS1CRUdJT..",
              "maxLength": 8192
            }
          }
        }
      }
    },
    "metadata": {
      "required": [
        "name"
      ],
      "properties": {
        "userData2": {
          "description": "User relevant data for the resource",
          "type": "string",
          "example": "Some more data",
          "maxLength": 512
        },
        "userData1": {
          "description": "User relevant data for the resource",
          "type": "string",
          "example": "Some data",
          "maxLength": 512
        },
        "name": {
          "description": "Name of the resource",
          "type": "string",
          "example": "ResName",
          "maxLength": 128,
          "pattern": "^([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]$"
        },
        "description": {
          "description": "Description for the resource",
          "type": "string",
          "example": "Resource description",
          "maxLength": 1024
        }
      }
    }
  }
}
