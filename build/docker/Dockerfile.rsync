ARG BASEDOCKERREPO
ARG GIT_SERVICE_IMAGE_NAME
ARG GIT_SERVICE_IMAGE_VERSION

FROM ${BASEDOCKERREPO}${GIT_SERVICE_IMAGE_NAME}:${GIT_SERVICE_IMAGE_VERSION}

ENV LD_LIBRARY_PATH=/opt/emco
WORKDIR /opt/emco/rsync

COPY ./rsync ./
COPY ./config.json ./


ENTRYPOINT "./rsync"

